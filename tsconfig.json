{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist_ts_check", // For type checking, not used for the final bundle
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // esbuild handles emission
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*.ts", "build.mjs"],
  "exclude": ["node_modules", "dist"]
}